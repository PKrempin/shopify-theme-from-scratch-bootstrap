.faLink{
    font-size: 16px;
}

.alt-link{
    padding-left: 0px;
}

.noWrap{
    white-space: nowrap;
}

.parallax {
    /* The image used */
    /* background-image: url("img_parallax.jpg");*/
  
    /* Set a specific height */
    min-height: 500px;
  
    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    width: 130vw;
    margin: 20px 0 20px -35vw;
    overflow: hidden;
  }

  .errors ul {
      list-style: none;
  }

  .comments-pagination a{
    padding: 0px 5px;
  }

  .item-input-wrapper{
    display: flex;
    justify-content: start;
  }


  .qty-wrapper{
      border: 1px solid black;
      display: flex;
      justify-content: space-between;
      font-size: 1.4em;
  }


  .qty-wrapper button {
    background: none;
	color: inherit;
	border: none;
	font: inherit;
	outline: inherit;
    padding: 0px 10px 0px 10px;
  }

  .qty-wrapper button:hover {
    background: gray;
    transition: 0.5s;
  }

  .qty-wrapper p {
      margin: 0px 10px 0px 10px;
  }

  .item-input-wrapper a {
    font-size:1.5rem;
    text-decoration: none;
    margin-left: 10px;
    color: inherit;
}

.cart-total{
